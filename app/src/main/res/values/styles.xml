<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="blueTextStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/midnight_blue</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textStyle16" parent="textStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="blueTextStyle16" parent="blueTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.CareDriver">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

</resources>